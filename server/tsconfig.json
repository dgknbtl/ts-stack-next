{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2017", "esnext.asynciterable"],
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "strict": true,                    
    "resolveJsonModule": true,        
    "incremental": true,              
    "noEmit": false                   
  },
  "include": ["src/**/*", "./eslint.config.mjs"],
  "exclude": ["node_modules"]
}
