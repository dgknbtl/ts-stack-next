{
  "compilerOptions": {
    
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2017", "esnext.asynciterable"],
    "types": ["node"],
    // "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
